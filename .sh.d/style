PRINT='echo -n'
[ `$PRINT | wc -c` -ne 0 ] && PRINT=printf
PS1='$(_prompt) '

_prompt() {
	# Pick the color of the prompt after a program returns.
	case $? in

	# Handle ^C and exit success.
	0|130)
		RET=240
		;;
	
	# Command not found
	127)
		RET=196
		;;
	
	# Default...what even is this command?
	*)
		RET=202
		;;
	esac

	# Actually construct the prompt with our generated color codes.
	RET="[38;5;${RET}m"
	RET="${RET}â†³[0m "

	$PRINT $RET
}

